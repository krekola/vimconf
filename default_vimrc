execute pathogen#infect()
set syntax=on
set t_Co=256
set background=dark
set nocompatible

set expandtab        " expand tabs to spaces
set ts=4             " tab width is 4 spaces
set shiftwidth=4     " indent also with 4 spaces
set autoindent

set number
set laststatus=2
nmap j gj
nmap k gk
map <Down> gj
map <Up> gk

set colorcolumn=80
highlight ColorColumn ctermbg=darkgray

nmap <F8> :TagbarToggle<CR>
